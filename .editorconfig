root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[{Makefile,*.mk}]
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[*.{dtx,frm,lua,lvt,sh,sty,tex,yml}]
indent_size = 2
indent_style = space

[{.pre-commit-config.yaml,*.py}]
indent_size = 4
indent_style = space
